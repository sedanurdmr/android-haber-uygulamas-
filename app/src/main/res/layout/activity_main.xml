<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sedanur.haber.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/baslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Başlık"

            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Türü"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/icerik"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_above="@+id/cikis"
            android:layout_alignLeft="@+id/cikis"
            android:layout_alignStart="@+id/cikis"
            android:layout_marginBottom="11dp"
            android:ems="10"
            android:gravity="top"
            android:hint="İçerik"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnekle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EKLE"
            android:textSize="20dp" />

        <Button
            android:id="@+id/don"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HABERLERE DÖN"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cikis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ÇIKIŞ"
            android:textSize="20dp" />



    </LinearLayout>

</android.support.constraint.ConstraintLayout>
